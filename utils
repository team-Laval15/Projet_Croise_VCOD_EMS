# pipelines/utils.py

import os

def ensure_dir(path):
    os.makedirs(path, exist_ok=True)

def get_trimester(month):
    month = int(month)
    if 1 <= month <= 3:
        return 1
    elif 4 <= month <= 6:
        return 2
    elif 7 <= month <= 9:
        return 3
    elif 10 <= month <= 12:
        return 4
    return None
